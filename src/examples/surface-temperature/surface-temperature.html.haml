%html
  %head
    %meta{:content => "text/html;charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Earth's Surface Temperature: 500-2009
    %script{:src => "../../vendor/d3/d3.v2.js", :type => "text/javascript"}
