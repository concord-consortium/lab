{
  "title": "Hydrogen-Oxygen Reaction",
  "publicationStatus": "public",
  "subtitle": "",
  "about": [
    "This model presents Hydrogen-Oxygen reaction without a heat bath.",
    "It means that the total energy should be conserved, but you should be able to see a rapid",
    "growth of the kinetic energy."
  ],
  "models": [
    {
      "type": "md2d",
      "id": "simplest-reaction$0",
      "url": "imports/legacy-mw-content/converted/conversion-and-physics-examples/chemical-reactions/hydrogen-oxygen-reaction$0.json",
      "importedFrom": "imports/legacy-mw-content/conversion-and-physics-examples/chemical-reactions/hydrogen-oxygen-reaction$0.mml",
      "viewOptions": {
        "controlButtons": "play_reset",
        "atomNumbers": true
      },
      "modelOptions": {
        "temperatureControl": false,
        "chemicalReactions": {
          "valenceElectrons": [
            1,
            1,
            6,
            7
          ],
          "bondEnergy": {
            "default": 6,
            "1-2": 5.2,
            "1-1": 4.52,
            "2-2": 0.1,
            "2=2": 5.16
          },
          "activationEnergy": {
            "default": 0.2,
            "1+2-2": 0.01,
            "2+1-2": 0.01,
            "2+1-1": 0.01,
            "1+2-1": 0.01
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "slow-motion",
      "initialValue": false,
      "onChange": "if (value) set('timeStep', 0.02); else set('timeStep', 0.08);"
    }
  ],
  "components": [
    {
      "type": "checkbox",
      "id": "slow-motion-checkbox",
      "text": "Slow motion",
      "property": "slow-motion"
    },
    {
      "type": "barGraph",
      "id": "thermometer",
      "property": "temperature",
      "units": true,
      "labelFormat": "3r",
      "title": "Temperature",
      "titleOn": "top",
      "min": 0,
      "max": 10000,
      "averagePeriod": 2500
    },
    {
      "type": "graph",
      "id": "energy-graph",
      "title": "Energy (KE:red, PE:green, TE:blue)",
      "xlabel": "Time (ps)",
      "ylabel": "Energy (eV)",
      "ymin": -80,
      "ymax": 10,
      "xmax": 30,
      "xTickCount": 10,
      "yTickCount": 10,
      "xFormatter": ".2r",
      "yFormatter": ".2s",
      "properties": [
        "kineticEnergy",
        "potentialEnergy",
        "totalEnergy"
      ]
    }
  ],
  "template": [
    {
      "id": "lower-right",
      "bottom": "model.bottom",
      "left": "model.right",
      "padding-left": "1em",
      "padding-right": "0.5em"
    },
    {
      "id": "right",
      "top": "model.top",
      "left": "model.right",
      "bottom": "lower-right.top",
      "padding-left": "1em",
      "padding-right": "0.5em"
    },
    {
      "id": "bottom",
      "top": "model.bottom",
      "width": "interactive.width",
      "height": "10em",
      "padding-top": "0.5em"
    }
  ],
  "layout": {
    "bottom": [
      "energy-graph"
    ],
    "lower-right": [
      "slow-motion-checkbox"
    ],
    "right": [
      "thermometer"
    ]
  }
}
