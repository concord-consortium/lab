    ],
    "experiment-controls": [
      [ "start-run", "stop-run", "save-run", "clear-run", "clear-all" ]
    ],
    "last-run-data": [
      "last-run-table"
    ],
    "bottom-left": [
      "experiment-table"
    ],
    "bottom-right": [
      "parameter-graph"
    ]
  },
  "template": [
