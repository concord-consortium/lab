{
  "title": "Absoprtion Spectra (Variable Light Frequency)",
  "publicationStatus": "draft",
  "subtitle": "Explore how monochrome light of varying frequency interacts with mixtures of elements",
  "about": "",
  "aspectRatio": 1.4,
  "fontScale": 0.8,
  "models": [
    {
      "type": "md2d",
      "id": "elementA",
      "url": "imports/legacy-mw-content/converted/sam-activities/light-matter/monochrome-absorb/elementA.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "setLightSourceAngle(0);",
        "setLightSourceFrequency(get('lightSourceFrequency'));",
        "setLightSourceNumber(5);",
        "setLightSourcePeriod(500);",
        "setTemperatureOfAtoms(atomsWithinRect(0,0,get('width'),get('height')),300);",
        "set('timeStepsPerTick',20);"
      ]
    },
    {
      "type": "md2d",
      "id": "elementB",
      "url": "imports/legacy-mw-content/converted/sam-activities/light-matter/monochrome-absorb/elementB.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "setLightSourceAngle(0);",
        "setLightSourceFrequency(get('lightSourceFrequency'));",
        "setLightSourceNumber(5);",
        "setLightSourcePeriod(500);",
        "setTemperatureOfAtoms(atomsWithinRect(0,0,get('width'),get('height')),300);",
        "set('timeStepsPerTick',20);"
      ]
    },
    {
      "type": "md2d",
      "id": "elementC",
      "url": "imports/legacy-mw-content/converted/sam-activities/light-matter/monochrome-absorb/elementC.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "setLightSourceAngle(0);",
        "setLightSourceFrequency(get('lightSourceFrequency'));",
        "setLightSourceNumber(5);",
        "setLightSourcePeriod(500);",
        "setTemperatureOfAtoms(atomsWithinRect(0,0,get('width'),get('height')),300);",
        "set('timeStepsPerTick',20);"
      ]
    }
  ],
  "parameters": [
    {
      "name": "lightSourceFrequency",
      "initialValue": 3,
      "onChange": "setLightSourceFrequency(value);"
    }
  ],
  "components": [
    {
      "type": "text",
      "id": "text-select-model",
      "text": "**Choose a substance to load**"
    },
    {
      "type": "radio",
      "id": "select-model",
      "options": [
        {
          "text": "Mixture A",
          "action": "loadModel('elementA');"
        },
        {
          "text": "Mixture B",
          "action": "loadModel('elementB');"
        },
        {
          "text": "Mixture C",
          "action": "loadModel('elementC');"
        }
      ]
    },
    {
      "type": "button",
      "id": "enable-light-source",
      "text": "Shine light on mixture",
      "action": [
        "start();",
        "turnOnLightSource();"
      ]
    },
    {
      "type": "button",
      "id": "stop-model",
      "text": "Stop",
      "action": "stop()"
    },
    {
      "type": "button",
      "id": "reset-model",
      "text": "Reset",
      "action": "reset()"
    },
    {
      "type": "slider",
      "id": "select-light-source-frequency",
      "min": 1,
      "max": 15,
      "steps": 14,
      "property": "lightSourceFrequency",
      "labels": [
        {
          "value": 1,
          "label": "Low"
        },
        {
          "value": 15,
          "label": "Hi"
        }
      ],
      "title": "Frequency of light source"
    }
  ],
  "layout": {
    "left": [
      [
        "text-select-model"
      ],
      [
        "select-model"
      ]
    ],
    "bottom": [
      ["enable-light-source", "stop-model", "reset-model"],
      ["select-light-source-frequency"]
    ]
  },
  "template": [
      {
        "id": "left",
        "top": "model.top",
        "height": "model.height",
        "right": "model.left",
        "padding-right": "0.5em"
      },
      {
        "id": "right",
        "top": "model.top",
        "height": "model.height",
        "left": "model.right",
        "padding-left": "1em",
        "padding-right": "0.5em"
      },
      {
        "id": "bottom",
        "top": "model.bottom",
        "left": "model.left",
        "width": "model.width",
        "align": "center"
      }
    ]
}