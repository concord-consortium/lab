{
  "title": "Mouse Interaction",
  "publicationStatus": "public",
  "subtitle": "Click any point in the model to read its current temperature.",
  "models": [
    {
      "type": "energy2d",
      "id": "benard-cell",
      "url": "imports/energy2d/models-json/benard-cell.json",
      "importedFrom": "imports/energy2d/models-xml/benard-cell.e2d",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "onClick('background', function(x, y) {",
        "  set('temp', getTemperatureAt(x, y));",
        "});",
        "onClick('part', function(x, y, d, i) {",
        "  var p = getPart(i); p.filled = true; p.color = '#' + ('000000' + Math.round(Math.random() * 0xffffff).toString(16)).substr(-6);",
        "});"
      ]
    }
  ],
  "parameters": [
    {
      "name": "temp",
      "initialValue": 0
    }
  ],
  "components": [
    {
      "type": "barGraph",
      "id": "bar-graph-right",
      "min": 0,
      "max": 50,
      "title": "Temperature (Â°C)",
      "property": "temp"
    }
  ],
  "layout": {
    "right": ["bar-graph-right"]
  }
}