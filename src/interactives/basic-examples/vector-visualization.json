{
  "title": "Vector Visualization",
  "publicationStatus": "public",
  "subtitle": "Velocity and force vectors can be added to atoms and the display properties can be customized.",
  "about": "",
  "models": [
    {
      "type": "md2d",
      "id": "pendulum1$0",
      "url": "imports/legacy-mw-content/converted/conversion-and-physics-examples/pendulum1$0.json",
      "viewOptions": {
        "controlButtons": "play_reset_step",
        "velocityVectors": {
          "length": 15
        },
        "forceVectors": {
          "length": 50
        }
      },
      "onLoad": "set({showVelocityVectors: true})"
    },
    {
      "type": "md2d",
      "id": "simple-gas$0",
      "url": "imports/legacy-mw-content/converted/new-examples-for-nextgen/simple-gas$0.json",
      "viewOptions": {
        "controlButtons": "play_reset_step",
        "velocityVectors": {
          "color": "#00A",
          "width": 0.015,
          "length": 3
        }
      },
      "onLoad": "set({showVelocityVectors: true})"
    },
    {
      "type": "md2d",
      "id": "page3$1",
      "url": "imports/legacy-mw-content/converted/sam-activities/intermolecular-attraction/original-interactives-in-pages/page3/page3$1.json",
      "viewOptions": {
        "controlButtons": "play_reset_step"
      },
      "onLoad": "set({showVelocityVectors: true})"
    }
  ],
  "components": [
    {
      "type": "checkbox",
      "id": "velocity_vectors",
      "text": "Velocity Vectors",
      "property": "showVelocityVectors"
    },
    {
      "type": "checkbox",
      "id": "force_vectors",
      "text": "Force Vectors",
      "property": "showForceVectors"
    },
    {
      "type": "checkbox",
      "id": "ke-shading",
      "text": "KE Shading",
      "property": "keShading"
    },
    {
      "type": "pulldown",
      "id": "pulldown",
      "options": [
        {
          "text": "Pendulum",
          "action": "loadModel('pendulum1$0');"
        },
        {
          "text": "Simple Gas",
          "action": "loadModel('simple-gas$0');"
        },
        {
          "text": "Oil and Water",
          "action": "loadModel('page3$1');"
        }
      ]
    }
  ],
  "layout": {
    "bottom": [
      [
        "pulldown",
        "velocity_vectors",
        "force_vectors",
        "ke-shading"
      ]
    ]
  }
}