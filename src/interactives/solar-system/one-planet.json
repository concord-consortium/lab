{
  "title": "Testing: one planet",
  "publicationStatus": "draft",
  "subtitle": "Body at center is 332,946x mass of orbiting body.",
  "about": "",
  "models": [
    {
      "id": "two-bodies",
      "type": "solar-system",
      "url": "models/solar-system/one-planet.json",
      "viewOptions": {
        "controlButtons": "play_reset_step"
      }
    }
  ],
  "outputs": [
    {
      "name":  "numBodies",
      "label": "Bodies",
      "units": "count",
      "value": [
          "return getNumberOfBodies();"
      ]
    }
  ],
  "components": [
    {
      "type": "button",
      "id": "add-random-body",
      "text": "Add random body",
      "action": "addRandomBody()"
    },
    {
      "type": "numericOutput",
      "id": "current-bodies",
      "property": "numBodies",
      "displayValue": "return format('f')(value)"
    },
    {
      "type": "text",
      "id": "wrapping-label",
      "text": "Model wrapping",
      "style": "header"
    },
    {
      "type": "checkbox",
      "id": "horizontal-wrapping",
      "text": "Horizontal",
      "property": "horizontalWrapping"
    },
    {
      "type": "checkbox",
      "id": "vertical-wrapping",
      "text": "Vertical",
      "property": "verticalWrapping"
    },
    {
      "type": "checkbox",
      "id": "trace-button",
      "text": "Trace Planet",
      "initialValue": false,
      "onClick": [
        "if (value) {",
        "  traceBody(1);",
        "} else {",
        "  untraceBody();",
        "}"
      ]
    }
  ],
  "layout": {
    "right": [
      [ "add-random-body" ],
      [ "current-bodies" ],
      [ "wrapping-label" ],
      [ "horizontal-wrapping" ],
      [ "vertical-wrapping" ],
      [ "trace-button" ]
    ],
    "bottom": [
    ]
  },
  "template": [
    {
      "id": "right",
      "top": "1em",
      "left": "model.right",
      "padding-left": "0.5em",
      "align": "left"
    },
    {
      "id": "bottom",
      "left": "model.left",
      "top": "model.bottom"
    }
  ]
}
