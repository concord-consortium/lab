      "onLoad": [
        "var c = 5, hasPlayed = false;",
        "function countdown() {",
        "  if (c < 1) {",
        "    setTextBoxProperties(0, {text: ''});",
        "    removeLine(2);",
        "    return;",
        "  } else {",
        "    setTextBoxProperties(0, {text: ''+c});",
        "    c--;",
        "    setTimeout(function() {",
        "      countdown();",
        "    }, 1000);",
        "  }",
        "}",
        "onPropertyChange('hasPlayed', function() {",
        "  if (!hasPlayed) {",
        "    hasPlayed = true;",
        "    countdown();",
        "  }",
        "});"
      ]
    }
  ],
