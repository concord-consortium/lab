<component><class>org.concord.mw2d.activity.AtomContainer</class>
<resource>gifplayer$0.mml</resource><statusbar>false</statusbar><border>none</border></component></content>

<content start="284" end="285">
</content>

</paragraph>
<paragraph start="285" end="288">
<Alignment>1</Alignment>
<content start="285" end="286">
<component><class>org.concord.modeler.PageButton</class>
<title>Play</title>
<tooltip>Play the animated GIF</tooltip>
<modelclass>org.concord.mw2d.models.MolecularModel</modelclass>
<model>0</model>
<script>run;focus;</script>
<action>Execute MW script</action>
</component></content>

<content start="286" end="287">
<component><class>org.concord.modeler.PageButton</class>
<title>Stop</title>
<tooltip>Stop the animated GIF</tooltip>
<modelclass>org.concord.mw2d.models.MolecularModel</modelclass>
<model>0</model>
<script>stop</script>
<action>Execute MW script</action>
</component></content>

