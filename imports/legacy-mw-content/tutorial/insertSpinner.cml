<component><class>org.concord.modeler.PageSpinner</class>
<title>Swap charges:</title>
<tooltip>Swap charges between two groups of atoms</tooltip>
<modelclass>org.concord.mw2d.models.MolecularModel</modelclass>
<model>0</model>
<minimum>-2.0</minimum>
<maximum>2.0</maximum>
<step>0.1</step>
<value>0.0</value>
<script>select element 1;
charge %val;
select element 2;
charge &quot;-%val&quot;;</script>
<change>Execute MW script</change>
</component></content>

